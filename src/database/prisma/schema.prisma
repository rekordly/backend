// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// Enums
enum UserRole {
  USER
  DRIVER
  ADMIN
}

enum OrderStatus {
  PENDING
  ACCEPTED
  DRIVER_EN_ROUTE
  ARRIVED_AT_PICKUP
  IN_TRANSIT
  ARRIVED_AT_DROPOFF
  DELIVERED
  COMPLETED
  CANCELLED
  DISPUTED
}

enum PaymentStatus {
  PENDING
  PAID
  NOT_PAID
  REFUNDED
  FAILED
}

enum KycStatus {
  PENDING
  VERIFIED
  REJECTED
  NOT_STARTED
}

enum DocumentType {
  NATIONAL_ID
  DRIVERS_LICENSE
  VEHICLE_REGISTRATION
  PROOF_OF_ADDRESS
}

enum DriverStatus {
  OFFLINE
  LOGGED_IN
  ONLINE
  BUSY
}

enum DisputeStatus {
  OPEN
  PENDING
  RESOLVED
  CLOSED
}

enum VehicleType {
  BIKE
  CAR
  VAN
  TRUCK
}

enum PaymentMethod {
  CASH
  CARD
  TRANSFER
}

enum NotificationType {
  ORDER_STATUS_UPDATE
  NEW_ORDER
  PAYMENT_CONFIRMED
  KYC_APPROVED
  KYC_REJECTED
  DISPUTE_UPDATE
  DRIVER_LOCATION_UPDATE
}

enum DeviceType {
  IOS
  ANDROID
  WEB
}

// Models
model User {
  id              String   @id @default(cuid())
  email           String   @unique
  password        String
  fullName        String
  phoneNumber     String   @unique
  role            UserRole @default(USER)
  locationState   String
  profilePictureUrl String?
  isActive        Boolean  @default(true)
  isEmailVerified Boolean  @default(false)
  isPhoneVerified Boolean  @default(false)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  // Relations
  deliveries      Delivery[]
  disputes        Dispute[]
  savedAddresses  SavedAddress[]
  devices         Device[]
  notifications   Notification[]

  @@map("users")
}

model Driver {
  id               String   @id @default(cuid())
  userId           String   @unique
  status           DriverStatus @default(OFFLINE)
  overallKycStatus KycStatus @default(NOT_STARTED)
  currentDeliveryId String?
  todaysEarnings   Float   @default(0)
  totalEarnings    Float   @default(0)
  completedCount   Int     @default(0)
  rating           Float   @default(0)
  totalRatings     Int     @default(0)
  isAvailable      Boolean @default(false)
  lastLocationUpdate DateTime?
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  // Relations
  user             User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  currentDelivery  Delivery?      @relation("CurrentDelivery", fields: [currentDeliveryId], references: [id])
  deliveries       Delivery[]
  vehicle          Vehicle?
  kycDocuments     KycDocument[]
  disputes         Dispute[]
  locations        DriverLocation[]

  @@map("drivers")
}

model Admin {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  fullName  String
  role      UserRole @default(ADMIN)
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("admins")
}

model Vehicle {
  id            String      @id @default(cuid())
  driverId      String      @unique
  vehicleType   VehicleType
  plateNumber   String
  vehicleModel  String
  vehicleColor  String?
  vehicleYear   Int?
  make          String?
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt

  // Relations
  driver        Driver      @relation(fields: [driverId], references: [id], onDelete: Cascade)

  @@map("vehicles")
}

model KycDocument {
  id          String       @id @default(cuid())
  driverId    String
  type        DocumentType
  fileUrl     String
  fileName    String
  fileSize    Int
  mimeType    String
  status      KycStatus    @default(PENDING)
  rejectionReason String?
  reviewedBy  String?
  reviewedAt  DateTime?
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  // Relations
  driver      Driver       @relation(fields: [driverId], references: [id], onDelete: Cascade)

  @@unique([driverId, type])
  @@map("kyc_documents")
}

model Delivery {
  id                  String        @id @default(cuid())
  userId              String
  driverId            String?
  pickupAddress       Json
  dropoffAddress      Json
  receiverPhoneNumber String
  goodsImageUrl       String?
  estimatedFare       Float
  actualFare          Float?
  distance            Float         // in kilometers
  duration            Int           // in minutes
  status              OrderStatus   @default(PENDING)
  paymentStatus       PaymentStatus @default(PENDING)
  paymentMethod       PaymentMethod
  packageDetails      Json?
  driverNotes         String?
  userNotes           String?
  acceptedAt          DateTime?
  pickedUpAt          DateTime?
  deliveredAt         DateTime?
  completedAt         DateTime?
  cancelledAt         DateTime?
  cancelledBy         String?       // USER or DRIVER
  cancellationReason  String?
  createdAt           DateTime      @default(now())
  updatedAt           DateTime      @updatedAt

  // Relations
  user                User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  driver              Driver?       @relation(fields: [driverId], references: [id])
  currentDriver       Driver?       @relation("CurrentDelivery")
  disputes            Dispute[]
  tracking            DeliveryTracking[]

  @@map("deliveries")
}

model DeliveryTracking {
  id          String   @id @default(cuid())
  deliveryId  String
  driverId    String
  latitude    Float
  longitude   Float
  timestamp   DateTime @default(now())
  speed       Float?   // in km/h
  bearing     Float?   // in degrees
  accuracy    Float?   // in meters
  createdAt   DateTime @default(now())

  // Relations
  delivery    Delivery @relation(fields: [deliveryId], references: [id], onDelete: Cascade)
  driver      Driver   @relation(fields: [driverId], references: [id], onDelete: Cascade)

  @@map("delivery_tracking")
}

model DriverLocation {
  id        String   @id @default(cuid())
  driverId  String
  latitude  Float
  longitude Float
  timestamp DateTime @default(now())
  status    DriverStatus
  bearing   Float?   // in degrees
  speed     Float?   // in km/h
  accuracy  Float?   // in meters
  createdAt DateTime @default(now())

  // Relations
  driver    Driver   @relation(fields: [driverId], references: [id], onDelete: Cascade)

  @@map("driver_locations")
}

model SavedAddress {
  id          String   @id @default(cuid())
  userId      String
  addressType String   // HOME, WORK, OTHER
  address     Json
  isDefault   Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, addressType])
  @@map("saved_addresses")
}

model Dispute {
  id             String       @id @default(cuid())
  deliveryId     String
  userId         String?
  driverId       String?
  issueTitle     String
  description    String
  status         DisputeStatus @default(OPEN)
  evidence       Json[]       // Array of file URLs
  resolutionNotes String?
  finalAction    String?      // REFUND_ISSUED, DRIVER_PENALIZED, etc.
  resolvedBy     String?
  resolvedAt     DateTime?
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt

  // Relations
  delivery       Delivery     @relation(fields: [deliveryId], references: [id], onDelete: Cascade)
  user           User?        @relation(fields: [userId], references: [id], onDelete: Cascade)
  driver         Driver?      @relation(fields: [driverId], references: [id], onDelete: Cascade)

  @@map("disputes")
}

model Device {
  id           String     @id @default(cuid())
  userId       String
  deviceToken  String
  deviceType   DeviceType
  platform     String     // FCM, APNS, WEB
  isActive     Boolean    @default(true)
  lastUsedAt   DateTime?
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt

  // Relations
  user         User       @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, deviceToken])
  @@map("devices")
}

model Notification {
  id        String           @id @default(cuid())
  userId    String
  type      NotificationType
  title     String
  message   String
  data      Json?
  isRead    Boolean          @default(false)
  sentAt    DateTime         @default(now())
  readAt    DateTime?
  createdAt DateTime         @default(now())

  // Relations
  user      User             @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("notifications")
}

model Otp {
  id        String   @id @default(cuid())
  email     String
  otp       String
  purpose   String   // auth, password_reset, phone_verification
  expiresAt DateTime
  isUsed    Boolean  @default(false)
  createdAt DateTime @default(now())

  @@unique([email, purpose])
  @@map("otps")
}